<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/row_padding_vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/row_padding_vertical">


    <TextView
        android:id="@+id/cropName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="@color/mainAttribute"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/farmerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/secondaryAttribute"
        android:layout_below="@id/cropName" />

    <TextView
        android:id="@+id/auctionStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/tertiaryAttribute"
        android:layout_below="@id/farmerName"
        android:text="@string/auctionRunning"
        />

</RelativeLayout>
